@model StudentVM
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2 class="display-5">Edit Candidate</h2>
            <input asp-for="StudentId" type="hidden" />
            <input asp-for="Image" type="hidden" />
            <div class="row mb-2">
                <label asp-for="StudentName" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="StudentName" class="form-control " />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="DateOfBirth" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="DateOfBirth" type="date" class="form-control " />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Age" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="Age" class="form-control " />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="ImageFile" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="ImageFile" type="file" class="form-control " />
                    <img src="@Model.Image" width="35" />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="MaritalStatus" class="form-check-label col-3"></label>
                <div class="col-7">
                    <input asp-for="MaritalStatus" type="checkbox" class="form-check " />
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="display-5">Skills</h2>
            <div class="d-flex justify-content-end">
                <a id="btnPlus" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
            </div>
            <div id="skillContainer">
                @foreach (var item in Model.SkillList)
                {
                    <script>
                        LoadData(@item);
                    </script>
                }
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" value="Update" class="btn btn-success mt-2" />
    </div>
</form>





